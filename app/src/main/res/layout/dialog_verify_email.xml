<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">





            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Verify Email"
                android:textStyle="bold"

                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"/>



            <TextView
                android:id="@+id/dialog_success_txt_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Please enter verification code that you receviev on registered email"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/TextColor"
                android:textSize="@dimen/_12sdp"/>


            <EditText
                android:id="@+id/verify_email_ed_otp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:id="@+id/verify_email_btn_cancel"

                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/bc_color_primory"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Cancel"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"/>
                <Button
                    android:id="@+id/verify_email_btn_submit"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/bc_color_primory"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Submit"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/_10sdp"/>


            </LinearLayout>




        </LinearLayout>





    </androidx.cardview.widget.CardView>

</LinearLayout>