<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">


	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:cardUseCompatPadding="true"
		app:cardElevation="@dimen/_4sdp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/feed_item_img_post"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:scaleType="fitXY"
					android:src="@mipmap/ic_launcher_round" />

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="@dimen/_10sdp"
						android:orientation="vertical"
						android:background="@color/white">

						<TextView
							android:id="@+id/feed_item_txt_category"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/app_name"
							style="@style/colorPrimoryText"/>


						<Button
							android:id="@+id/feed_item_btn_promote"
							android:layout_width="@dimen/_100sdp"
							android:layout_height="@dimen/_30sdp"
							android:layout_marginTop="@dimen/_5sdp"
							android:layout_gravity="right"
							android:text="Promote"
							android:textAllCaps="false"
							android:textSize="@dimen/_12sdp"
							android:textColor="@color/white"
							android:background="@color/colorPrimary"/>


						<TextView
							android:id="@+id/feed_item_txt_title"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/app_name"
							android:layout_marginTop="@dimen/_5sdp"
							style="@style/LoginEdit"
							android:textSize="@dimen/_16sdp"/>


						<TextView
							android:id="@+id/feed_item_txt_description"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/app_name"
							android:visibility="gone"
							android:layout_marginTop="@dimen/_5sdp" />


						<com.chinalwb.are.render.AreTextView
							android:id="@+id/areTextView"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>

						<com.github.irshulx.Editor
							android:layout_width="match_parent"
							android:id="@+id/feed_item_txt_renderer"
							app:render_type="Renderer"
							android:paddingLeft="10dp"
							android:paddingRight="10dp"
							android:layout_height="wrap_content"
							android:paddingBottom="10dp"
							/>



						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_marginTop="@dimen/_5sdp"
							android:orientation="horizontal">


							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:background="@drawable/bc_corner_white"
								android:padding="@dimen/_2sdp"
								android:orientation="horizontal"
								android:layout_weight="1"
								android:layout_marginBottom="@dimen/_5sdp"
								android:elevation="@dimen/_2sdp">

								<de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
									android:id="@+id/feed_item_img_profile"
									android:layout_width="@dimen/_30sdp"
									android:layout_height="@dimen/_30sdp"
									android:layout_gravity="bottom|center_horizontal"
									android:src="@mipmap/ic_launcher_round"
									app:civ_border_color="@color/white"
									app:civ_border_width="2dp"
									android:elevation="@dimen/_2sdp"/>


								<TextView
									android:id="@+id/feed_item_txt_user_name"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_gravity="center"
									android:textSize="@dimen/_10sdp"
									android:layout_marginLeft="@dimen/_5sdp"
									android:text="@string/app_name"/>

							</LinearLayout>


							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_weight="1"
								android:layout_gravity="right"
								android:gravity="right"
								android:layout_marginRight="@dimen/_10sdp">

								<ImageView
									android:id="@+id/feed_item_img_delete"
									android:layout_width="20dp"
									android:layout_height="25dp"
									android:tint="@color/grey"
									android:scaleType="fitXY"
									android:layout_gravity="center_vertical"
									android:layout_marginRight="@dimen/_2sdp"
									android:src="@drawable/ic_delete" />


								<ImageView
									android:id="@+id/feed_item_img_edit"
									android:layout_width="@dimen/_20sdp"
									android:layout_height="@dimen/_20sdp"
									android:layout_gravity="center_vertical"
									android:layout_marginRight="@dimen/_2sdp"
									android:layout_marginLeft="@dimen/_2sdp"
									android:tint="@color/grey"
									android:src="@drawable/ic_edit"/>

								<ImageView
									android:id="@+id/feed_item_img_fav"
									android:layout_width="@dimen/_20sdp"
									android:layout_height="@dimen/_20sdp"
									android:layout_gravity="center_vertical"
									android:layout_marginLeft="@dimen/_2sdp"
									android:layout_marginRight="@dimen/_2sdp"
									android:tint="@color/grey"
									android:src="@drawable/fav_inactive"/>

								<ImageView
									android:id="@+id/feed_item_img_comment"
									android:layout_width="@dimen/_20sdp"
									android:layout_height="@dimen/_20sdp"
									android:layout_gravity="center_vertical"
									android:src="@drawable/comment_inactive"
									android:tint="@color/grey"
									android:layout_marginLeft="@dimen/_2sdp"
									android:layout_marginRight="@dimen/_2sdp"/>



								<ImageView
									android:id="@+id/feed_item_img_share"
									android:layout_width="@dimen/_20sdp"
									android:layout_height="@dimen/_20sdp"
									android:tint="@color/grey"
									android:layout_gravity="center_vertical"
									android:src="@drawable/share_inactive"/>
							</LinearLayout>

						</LinearLayout>

					</LinearLayout>





			</LinearLayout>




		</LinearLayout>
	</androidx.cardview.widget.CardView>

</LinearLayout>