<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_gravity="center"
	android:gravity="center_horizontal"
	android:layout_height="match_parent">



	<androidx.cardview.widget.CardView
		android:layout_width="@dimen/_250sdp"
		android:layout_height="@dimen/_300sdp"
		app:cardCornerRadius="@dimen/_10sdp"
		android:elevation="@dimen/_10sdp"
		app:cardUseCompatPadding="true">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center"
			android:gravity="center"
			android:background="@color/white"
			android:orientation="vertical">


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/_40sdp"
				>


				<TextView
					android:id="@+id/dialoge_promote_txt_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:gravity="center"
					android:text=""
					android:textColor="@color/TextColor"
					android:textSize="@dimen/_14sdp"
					android:textStyle="bold" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/_1sdp"
				android:background="@color/grey"/>


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:padding="@dimen/_15sdp">


				<TextView
					android:id="@+id/dialoge_promote_txt_description"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text=""/>


				<RadioGroup
					android:id="@+id/dialoge_promote_radio_grp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/_10sdp">

					<RadioButton
						android:id="@+id/dialoge_promote_rb_7day"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="1500 for 7 days"/>


					<RadioButton
						android:id="@+id/dialoge_promote_rb_15day"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="2500 for 15 days"/>


					<RadioButton
						android:id="@+id/dialoge_promote_rb_30day"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="4000 for 30 days"/>

				</RadioGroup>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="bottom"
					android:gravity="bottom">

					<Button
						android:id="@+id/dialoge_promote_btn_close"
						android:layout_width="match_parent"
						android:layout_height="@dimen/_30sdp"
						android:layout_weight="1"
						android:text="Close"
						android:textColor="@color/white"
						android:layout_marginRight="@dimen/_4sdp"
						android:background="@drawable/bc_color_green"
						android:textAllCaps="false"/>

					<Button
						android:id="@+id/dialoge_promote_btn_submit"
						android:layout_width="match_parent"
						android:layout_height="@dimen/_30sdp"
						android:layout_weight="1"
						android:text="Submit"
						android:layout_marginLeft="@dimen/_4sdp"
						android:textColor="@color/white"
						android:background="@drawable/bc_color_primory"
						android:textAllCaps="false"/>


				</LinearLayout>



			</LinearLayout>




		</LinearLayout>
	</androidx.cardview.widget.CardView>

</LinearLayout>