<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">


	<androidx.cardview.widget.CardView
		android:id="@+id/feed_data_card_post"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:cardUseCompatPadding="true"
		app:cardElevation="@dimen/_4sdp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">


					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:padding="@dimen/_10sdp"
						android:orientation="horizontal">



							<de.hdodenhof.circleimageview.CircleImageView
								android:id="@+id/feed_data_item_img_user_profile"
								android:layout_width="@dimen/_30sdp"
								android:layout_height="@dimen/_30sdp"
								android:layout_centerVertical="true"
								android:elevation="@dimen/_2sdp"
								android:src="@mipmap/ic_launcher_round"
								app:civ_border_width="@dimen/_1sdp"
								app:civ_border_color="@color/white"/>


							<TextView

								android:id="@+id/feed_data_item_txt_username"
								android:layout_toRightOf="@id/feed_data_item_img_user_profile"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:text="Johny Deo"
								android:layout_centerVertical="true"
								style="@style/LoginEdit"
								android:layout_marginLeft="@dimen/_10sdp"
								android:gravity="center_vertical"/>


							<Button
								android:id="@+id/feed_data_item_btn_cat_type"
								android:layout_width="@dimen/_65sdp"
								android:layout_height="@dimen/_25sdp"
								android:text="General"
								android:textColor="@color/white"
								android:textAllCaps="false"
								android:textStyle="normal"
								android:textSize="@dimen/_10sdp"
								android:elevation="@dimen/_2sdp"
								android:visibility="gone"
								android:background="@drawable/bc_round_color_primory"
								android:layout_alignParentRight="true"/>




					</RelativeLayout>


					<ImageView
						android:id="@+id/feed_data_item_img_main"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:scaleType="fitXY"
						android:src="@mipmap/ic_launcher_round"/>
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/_5sdp"
					android:layout_marginLeft="@dimen/_5sdp">
					<TextView
						android:id="@+id/feed_data_txt_category"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="dsfhsdfhs"
						android:textColor="@color/colorPrimary"
						android:textSize="@dimen/_12sdp"/>
					<TextView
						android:id="@+id/tvslash1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="@dimen/_12sdp"
						android:visibility="gone"
						android:layout_marginStart="@dimen/_5sdp"
						android:text="/"
						tools:ignore="RtlCompat" />
					<ImageView
						android:id="@+id/ivBoost"
						android:layout_width="@dimen/_15sdp"
						android:layout_height="@dimen/_15sdp"
						android:layout_marginLeft="@dimen/_5sdp"
						android:tint="@color/yellow"
						android:visibility="gone"
						android:src="@drawable/ic_boost"/>

					<TextView
						android:id="@+id/tvslash2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="@dimen/_12sdp"
						android:layout_marginStart="@dimen/_5sdp"
						android:text="/"
						android:visibility="gone"
						tools:ignore="RtlCompat" />
					<ImageView
						android:id="@+id/ivLink"
						android:layout_width="@dimen/_10sdp"
						android:layout_height="@dimen/_15sdp"
						android:layout_marginLeft="@dimen/_5sdp"
						android:visibility="gone"
						android:src="@drawable/icon_link"/>

				</LinearLayout>


					<TextView
						android:id="@+id/feed_data_txt_title"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/_5sdp"
						android:textColor="@color/black"
						 android:textAllCaps="true"
						android:textStyle="bold"
						android:layout_marginTop="@dimen/_5sdp"
						android:textSize="@dimen/_16sdp"/>



					<com.chinalwb.are.render.AreTextView
						android:id="@+id/areTextView"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						 />

				<com.nex3z.flowlayout.FlowLayout
					android:id="@+id/flowlayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:flChildSpacing="auto"
					android:layout_margin="5dp"
					app:flChildSpacingForLastRow="align"
					app:flRowSpacing="5dp"/>

				<TextView
					android:visibility="gone"
					android:id="@+id/textview_tags"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColor="@color/button_color"
					android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

					<com.github.irshulx.Editor
						android:layout_width="match_parent"
						android:id="@+id/feed_data_item_txt_renderer"
						app:render_type="Renderer"
						android:paddingLeft="10dp"
						android:paddingRight="10dp"
						android:layout_marginTop="@dimen/_10sdp"
						android:layout_height="wrap_content"
						android:paddingBottom="10dp"
						android:visibility="gone"
						/>

					<TextView
						android:id="@+id/feed_data_item_txt_content"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:visibility="gone"/>



				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal"
					android:padding="@dimen/_10sdp">


					<ImageView
						android:id="@+id/feed_data_item_img_fav"
						android:layout_width="@dimen/_20sdp"
						android:layout_height="@dimen/_20sdp"
						android:layout_marginRight="@dimen/_5sdp"
						android:tint="@color/grey"
						android:src="@drawable/fav_inactive"/>





					<ImageView
						android:id="@+id/feed_data_item_img_comment"
						android:layout_width="@dimen/_20sdp"
						android:layout_height="@dimen/_20sdp"
						android:tint="@color/grey"
						android:layout_marginLeft="@dimen/_5sdp"
						android:src="@drawable/comment_inactive"/>

					<TextView
						android:id="@+id/feed_data_item_txt_comment_count"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:gravity="center"
						android:layout_marginLeft="@dimen/_2sdp"
						android:textSize="@dimen/_10sdp"
						android:layout_marginRight="@dimen/_5sdp"
						android:textColor="@color/colorPrimary"/>


					<ImageView
						android:id="@+id/feed_data_item_img_share"
						android:layout_width="@dimen/_20sdp"
						android:layout_height="@dimen/_20sdp"
						android:layout_marginRight="@dimen/_5sdp"
						android:layout_marginLeft="@dimen/_5sdp"
						android:tint="@color/grey"
						android:src="@drawable/share_inactive"/>


					<ImageView
						android:id="@+id/feed_data_item_img_flag"
						android:layout_width="@dimen/_20sdp"
						android:layout_height="@dimen/_20sdp"
						android:layout_marginLeft="@dimen/_5sdp"
						android:tint="@color/grey"
						android:src="@drawable/report_inactive"/>


				</LinearLayout>






			</LinearLayout>




		</LinearLayout>
	</androidx.cardview.widget.CardView>


	<androidx.cardview.widget.CardView
		android:id="@+id/feed_data_card_advertisement"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardUseCompatPadding="true"
		android:layout_gravity="center"
		app:cardElevation="@dimen/_4sdp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">


			<ImageView
				android:id="@+id/feed_data_img_advertisement"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>


		</LinearLayout>

	</androidx.cardview.widget.CardView>

</LinearLayout>